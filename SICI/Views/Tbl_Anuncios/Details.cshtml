    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Detalle</h2>

<div>
    <h4>Anuncios</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Autor
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AutorAnuncio)
        </dd>

        <dt>
            Anuncio
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TituloAnuncio)
        </dd>

        <dt>
