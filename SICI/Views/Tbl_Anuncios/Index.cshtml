@model IEnumerable<SICI.Modelo.Tbl_Anuncios>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<p>
    @Html.ActionLink("Nuevo anuncio", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Autor
        </th>
        <th>
            Anuncio
        </th>
        <th>
            Descripción anuncio
        </th>
        <th>
            Fecha creación anuncio
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
             @Html.DisplayFor(modelItem => item.AutorAnuncio);
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TituloAnuncio);
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DescripcionAnuncio);
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FechaCreacionAnuncio);
        </td>
        
        <td>
            <a href="@Url.Action("Edit", new { id=item.IdAnuncio })" class="btn btn-mini btn-info icon-Edit glyphicon glyphicon-pencil"> Editar</a>
            <a href="@Url.Action("Details", new { id=item.IdAnuncio})" class="btn btn-mini btn-success icon-Edit glyphicon glyphicon-eye-open"> Detalles</a>
            <a href="@Url.Action("Delete", new { id=item.IdAnuncio })" class="btn btn-mini btn-danger icon-Edit glyphicon glyphicon-trash"> Eliminar</a>
        </td>
    </tr>
}

</table>
